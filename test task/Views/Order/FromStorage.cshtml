@{
    ViewData["Title"] = "Загрузка оплаты...";
}

<div class="container my-5 text-center">
    <p>Загружаем данные о заказе...</p>
</div>

@section Scripts {
    <script>
        const data = localStorage.getItem('selectedDrinks');
        if (!data) {
            window.location.href = '/Order/Index';
        } else {
            fetch('/Order/Receive', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: data
            }).then(() => {
                localStorage.removeItem('selectedDrinks');
                window.location.href = '/Order/Payment';
            });
        }
    </script>
}
